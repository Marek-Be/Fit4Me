<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HomePage">

    <android.support.constraint.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <android.support.constraint.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <android.support.constraint.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/bottom_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:progressBackgroundTint="#2201A903"
        android:progressTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.476" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="78dp"
        android:layout_height="73dp"
        android:tint="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/determinateBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/determinateBar"
        app:layout_constraintRight_toRightOf="@+id/determinateBar"
        app:layout_constraintTop_toTopOf="@+id/determinateBar"
        app:srcCompat="@drawable/ic_action_name" />

    <Button
        android:id="@+id/editprofile"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_marginTop="472dp"
        android:background="@drawable/curvedbutton2"
        android:text="EDIT PROFILE"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline2"
        app:layout_constraintLeft_toRightOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/addactivity"
        android:layout_width="81dp"
        android:layout_height="64dp"
        android:layout_marginTop="472dp"
        android:background="@drawable/curvedbutton2"
        android:text="ADD ACTIVITY"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline2"
        app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
        app:layout_constraintLeft_toRightOf="@+id/editprofile"
        app:layout_constraintRight_toLeftOf="@+id/trackprogress"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="138dp" />


    <Button
        android:id="@+id/trackprogress"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginTop="472dp"
        android:background="@drawable/curvedbutton2"
        android:text="TRACK PROGRESS"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_guideline2"
        app:layout_constraintRight_toLeftOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/top_guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/top_guideline"
        app:layout_constraintLeft_toRightOf="@+id/star1"
        app:layout_constraintRight_toLeftOf="@+id/star3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_guideline"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/top_guideline"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toRightOf="@+id/star3"
        app:layout_constraintRight_toLeftOf="@+id/star5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/top_guideline"
        app:layout_constraintHorizontal_bias="0.995"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginTop="292dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toTopOf="@+id/top_guideline"
        app:layout_constraintVertical_bias="0.897"
        app:srcCompat="@drawable/homebackground" />

    <ImageView
        android:id="@+id/footballsticker"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/footballer" />

    <ImageView
        android:id="@+id/swimsticker"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintLeft_toRightOf="@+id/footballsticker"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/swimmer2" />

    <ImageView
        android:id="@+id/bballsticker"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_marginLeft="4dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintLeft_toRightOf="@+id/swimsticker"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/basketballplayer" />

    <ImageView
        android:id="@+id/cyclesticker"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_marginLeft="24dp"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/bg"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/bballsticker"
        app:layout_constraintRight_toRightOf="@+id/right_guideline"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/cyclist" />


</android.support.constraint.ConstraintLayout>